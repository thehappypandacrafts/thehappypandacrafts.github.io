<!DOCTYPE html>
<html lang="en">
<head>
<meta charset="UTF-8" />
<meta name="viewport" content="width=device-width, initial-scale=1.0" />
<title>The Happy Panda Crafts</title>

<style>
*{box-sizing:border-box}
html,body{margin:0;padding:0;width:100%;height:100%}
body{
  font-family:Poppins,system-ui,sans-serif;
  background:#faf6f1;
  color:#2d2d2d;
  overflow-x:hidden;
}

/* ================= WELCOME SCREEN (LOCKED & SAFE) ================= */
body.welcome-active #site{display:none}

#welcome{
  position:fixed;
  inset:0;
  display:flex;
  align-items:center;
  justify-content:center;
  z-index:10000;
}
#welcome-bg{
  position:absolute;
  inset:0;
  background:url('Logo.png') center/contain no-repeat;
  background-color:#000;
}
#welcome-overlay{
  position:absolute;
  inset:0;
  background:rgba(0,0,0,0.6);
}

.welcome-box{
  position:relative;
  z-index:2;
  background:rgba(255,255,255,0.92);
  padding:44px 38px;
  border-radius:30px;
  text-align:center;
  max-width:420px;
  box-shadow:0 40px 100px rgba(0,0,0,0.35);
}
.welcome-box h1{margin:0 0 12px}
.welcome-box p{margin:0 0 24px}
.welcome-box button{
  padding:14px 36px;
  border-radius:999px;
  border:none;
  background:linear-gradient(135deg,#8e44ad,#e84393);
  color:#fff;
  font-weight:600;
  cursor:pointer;
}

/* ================= SVG WOOL BACKGROUND ================= */
#wool-bg{
  position:fixed;
  inset:0;
  width:100vw;
  height:100vh;
  z-index:0;
  pointer-events:none;
  opacity:0.35;
}

/* ================= SITE ================= */
#site{position:relative;z-index:1}
header{
  position:sticky;
  top:0;
  z-index:5;
  background:rgba(255,255,255,.88);
  backdrop-filter:blur(14px);
  padding:14px 22px;
  display:flex;
  align-items:center;
  gap:12px
}
header img{width:48px;height:48px;border-radius:14px}

/* ================= CATEGORY BUTTONS ================= */
.categories{
  display:flex;
  gap:14px;
  justify-content:center;
  padding:28px 18px
}
.category{
  padding:12px 26px;
  border-radius:999px;
  background:rgba(255,255,255,0.7);
  backdrop-filter:blur(12px);
  border:1px solid rgba(255,255,255,0.4);
  font-weight:600;
  cursor:pointer;
  box-shadow:0 18px 40px rgba(0,0,0,0.12);
  transition:all .3s ease
}
.category:hover{transform:translateY(-4px)}
.category.active{
  background:linear-gradient(135deg,#ff9a9e,#fad0c4);
  color:#222
}

/* ================= PRODUCT GRID ================= */
.grid{
  padding:30px 22px 60px;
  display:grid;
  grid-template-columns:repeat(auto-fill,minmax(180px,1fr));
  gap:22px
}
.card{
  position:relative;
  background:rgba(255,255,255,.75);
  backdrop-filter:blur(12px);
  border-radius:26px;
  overflow:hidden;
  aspect-ratio:1/1;
  cursor:pointer;
  transition:transform .35s ease,box-shadow .35s ease
}
.card:hover{
  transform:translateY(-8px) scale(1.025);
  box-shadow:0 32px 80px rgba(0,0,0,.18)
}
.card img{
  width:100%;height:100%;object-fit:cover;display:block
}

/* ================= MODAL ================= */
#modal{
  position:fixed;
  inset:0;
  display:flex;
  align-items:center;
  justify-content:center;
  background:rgba(0,0,0,.82);
  opacity:0;
  pointer-events:none;
  z-index:20000
}
#modal.active{opacity:1;pointer-events:auto}
#modal-box{
  background:#fff;
  border-radius:26px;
  padding:22px;
  text-align:center
}
#modal-box img{
  max-width:80vw;
  max-height:60vh;
  border-radius:18px
}
</style>
</head>

<body class="welcome-active">

<!-- WELCOME -->
<div id="welcome">
  <div id="welcome-bg"></div>
  <div id="welcome-overlay"></div>
  <div class="welcome-box">
    <h1>The Happy Panda Crafts üêº</h1>
    <p>Bringing smiles through handmade crochet</p>
    <button onclick="enterSite()">Enter</button>
  </div>
</div>

<!-- SITE -->
<div id="site">
<header>
  <img src="Logo.png" alt="Logo">
  <h2>The Happy Panda Crafts</h2>
</header>

<!-- SVG WOOL THREADS BACKGROUND -->
<svg id="wool-bg" viewBox="0 0 1000 1000" preserveAspectRatio="none">
  <defs>
    <linearGradient id="woolRed" x1="0" y1="0" x2="0" y2="1">
      <stop offset="0%" stop-color="#e17055"/>
      <stop offset="100%" stop-color="#d35400"/>
    </linearGradient>
    <linearGradient id="woolYellow" x1="0" y1="0" x2="0" y2="1">
      <stop offset="0%" stop-color="#f6d365"/>
      <stop offset="100%" stop-color="#f39c12"/>
    </linearGradient>
    <linearGradient id="woolGreen" x1="0" y1="0" x2="0" y2="1">
      <stop offset="0%" stop-color="#55efc4"/>
      <stop offset="100%" stop-color="#00b894"/>
    </linearGradient>
    <linearGradient id="woolBlue" x1="0" y1="0" x2="0" y2="1">
      <stop offset="0%" stop-color="#74b9ff"/>
      <stop offset="100%" stop-color="#0984e3"/>
    </linearGradient>
    <linearGradient id="woolPink" x1="0" y1="0" x2="0" y2="1">
      <stop offset="0%" stop-color="#fab1a0"/>
      <stop offset="100%" stop-color="#e84393"/>
    </linearGradient>
  </defs>

  <!-- CENTERED THREADS WITH BALANCED SWAY -->

  <!-- Thread helper note:
       Each group is translated to a fixed X position.
       Rotation happens around top center so sway is symmetric.
  -->

  <g transform="translate(100,0)" transform-origin="0 0">
    <animateTransform type="rotate" from="-3 0 0" to="3 0 0" dur="7s" repeatCount="indefinite" direction="alternate" />
    <path d="M0 0 C 8 300 -6 650 4 900" stroke="url(#woolRed)" stroke-width="6" fill="none" stroke-linecap="round" />
    <path d="M3 0 C 10 300 -4 650 6 900" stroke="url(#woolRed)" stroke-width="4" fill="none" stroke-linecap="round" opacity="0.8" />
    <path d="M-3 0 C 6 300 -8 650 2 900" stroke="url(#woolRed)" stroke-width="3" fill="none" stroke-linecap="round" opacity="0.7" />
    <path d="M1 0 C 7 300 -5 650 5 900" stroke="url(#woolRed)" stroke-width="2" fill="none" stroke-linecap="round" opacity="0.6" />
  </g>

  <g transform="translate(300,0)" transform-origin="0 0">
    <animateTransform type="rotate" from="2 0 0" to="-2 0 0" dur="6.5s" repeatCount="indefinite" direction="alternate" />
    <path d="M0 0 C -6 300 8 650 -4 900" stroke="url(#woolYellow)" stroke-width="6" fill="none" stroke-linecap="round" />
    <path d="M2 0 C -4 300 10 650 -2 900" stroke="url(#woolYellow)" stroke-width="4" fill="none" stroke-linecap="round" opacity="0.8" />
    <path d="M-2 0 C -8 300 6 650 -6 900" stroke="url(#woolYellow)" stroke-width="3" fill="none" stroke-linecap="round" opacity="0.7" />
    <path d="M1 0 C -5 300 7 650 -3 900" stroke="url(#woolYellow)" stroke-width="2" fill="none" stroke-linecap="round" opacity="0.6" />
  </g>

  <g transform="translate(500,0)" transform-origin="0 0">
    <animateTransform type="rotate" from="-2.5 0 0" to="2.5 0 0" dur="8s" repeatCount="indefinite" direction="alternate" />
    <path d="M0 0 C 5 320 -7 660 3 900" stroke="url(#woolGreen)" stroke-width="6" fill="none" stroke-linecap="round" />
    <path d="M2 0 C 7 320 -5 660 5 900" stroke="url(#woolGreen)" stroke-width="4" fill="none" stroke-linecap="round" opacity="0.8" />
    <path d="M-2 0 C 3 320 -9 660 1 900" stroke="url(#woolGreen)" stroke-width="3" fill="none" stroke-linecap="round" opacity="0.7" />
    <path d="M1 0 C 6 320 -6 660 4 900" stroke="url(#woolGreen)" stroke-width="2" fill="none" stroke-linecap="round" opacity="0.6" />
  </g>

  <g transform="translate(700,0)" transform-origin="0 0">
    <animateTransform type="rotate" from="3 0 0" to="-3 0 0" dur="7.2s" repeatCount="indefinite" direction="alternate" />
    <path d="M0 0 C -7 300 6 650 -3 900" stroke="url(#woolBlue)" stroke-width="6" fill="none" stroke-linecap="round" />
    <path d="M2 0 C -5 300 8 650 -1 900" stroke="url(#woolBlue)" stroke-width="4" fill="none" stroke-linecap="round" opacity="0.8" />
    <path d="M-2 0 C -9 300 4 650 -5 900" stroke="url(#woolBlue)" stroke-width="3" fill="none" stroke-linecap="round" opacity="0.7" />
    <path d="M1 0 C -6 300 7 650 -2 900" stroke="url(#woolBlue)" stroke-width="2" fill="none" stroke-linecap="round" opacity="0.6" />
  </g>

  <g transform="translate(900,0)" transform-origin="0 0">
    <animateTransform type="rotate" from="-2 0 0" to="2 0 0" dur="6.8s" repeatCount="indefinite" direction="alternate" />
    <path d="M0 0 C 6 310 -5 640 4 900" stroke="url(#woolPink)" stroke-width="6" fill="none" stroke-linecap="round" />
    <path d="M2 0 C 8 310 -3 640 6 900" stroke="url(#woolPink)" stroke-width="4" fill="none" stroke-linecap="round" opacity="0.8" />
    <path d="M-2 0 C 4 310 -7 640 2 900" stroke="url(#woolPink)" stroke-width="3" fill="none" stroke-linecap="round" opacity="0.7" />
    <path d="M1 0 C 7 310 -4 640 5 900" stroke="url(#woolPink)" stroke-width="2" fill="none" stroke-linecap="round" opacity="0.6" />
  </g>
</svg>

<div class="categories">
  <div class="category active" data-cat="all">All</div>
  <div class="category" data-cat="toys">Toys</div>
  <div class="category" data-cat="decor">Decor</div>
  <div class="category" data-cat="gifts">Gifts</div>
</div>

<div class="grid" id="grid">
  <div class="card" data-cat="toys" data-img="images/photo1.jpg"><img src="images/photo1.jpg"></div>
  <div class="card" data-cat="decor" data-img="images/photo2.jpg"><img src="images/photo2.jpg"></div>
  <div class="card" data-cat="gifts" data-img="images/photo3.jpg"><img src="images/photo3.jpg"></div>
</div>
</div>

<div id="modal">
  <div id="modal-box">
    <img id="modalImg">
    <br><br>
    <a id="waBtn" target="_blank" style="display:inline-block;padding:14px 30px;border-radius:40px;background:#25d366;color:#fff;font-weight:600;text-decoration:none">Order on WhatsApp</a>
  </div>
</div>

<script>
function enterSite(){
  document.body.classList.remove('welcome-active');
  document.getElementById('welcome').style.display='none';
}

const cats=document.querySelectorAll('.category');
const cards=document.querySelectorAll('.card');

cats.forEach(btn=>{
  btn.onclick=()=>{
    cats.forEach(b=>b.classList.remove('active'));
    btn.classList.add('active');
    const cat=btn.dataset.cat;
    cards.forEach(card=>{
      card.style.display=(cat==='all'||card.dataset.cat===cat)?'block':'none';
    });
  }
});

const modal=document.getElementById('modal');
const modalImg=document.getElementById('modalImg');
const waBtn=document.getElementById('waBtn');

document.querySelectorAll('.card').forEach(c=>{
  c.onclick=()=>{
    const img=c.dataset.img;
    modalImg.src=img;
    waBtn.href=`https://wa.me/91XXXXXXXXXX?text=Hi!%20Interested%20in:%20${location.origin+'/'+img}`;
    modal.classList.add('active');
  }
});

modal.onclick=e=>{if(e.target===modal)modal.classList.remove('active')}
</script>

</body>
</html>


<!DOCTYPE html>
<html lang="en">
<head>
<meta charset="UTF-8" />
<meta name="viewport" content="width=device-width, initial-scale=1.0" />
<title>The Happy Panda Crafts</title>
<link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600;700&display=swap" rel="stylesheet">

<style>
*{box-sizing:border-box}
body{margin:0;font-family:Poppins,system-ui,sans-serif;background:var(--bg,#faf6f1);color:#2d2d2d;overflow-x:hidden;transition:background .6s ease}

/* ================= WOOL THREADS ================= */
.threads{position:fixed;inset:0;z-index:1;pointer-events:none}
.thread{position:absolute;top:0;height:90vh;width:18px;transform-origin:top center}
.thread::before{content:"";position:absolute;inset:0;border-radius:12px 12px 18px 18px;background:repeating-linear-gradient(14deg,rgba(255,255,255,.45) 0 2px,currentColor 4px 7px)}
.thread::after{content:"";position:absolute;bottom:-10px;left:50%;width:14px;height:14px;background:currentColor;border-radius:50%;transform:translateX(-50%)}
.t1{left:8%;color:#e76f51;animation:swayA 9s ease-in-out infinite}
.t2{left:22%;color:#2a9d8f;animation:swayB 11s ease-in-out infinite}
.t3{left:38%;color:#f4a261;animation:swayC 10s ease-in-out infinite}
.t4{left:55%;color:#e9c46a;animation:swayA 12s ease-in-out infinite}
.t5{left:70%;color:#457b9d;animation:swayB 13s ease-in-out infinite}
.t6{left:85%;color:#b56576;animation:swayC 14s ease-in-out infinite}
@keyframes swayA{0%{transform:rotate(0)}30%{transform:rotate(1.2deg)}55%{transform:rotate(-.8deg)}100%{transform:rotate(0)}}
@keyframes swayB{0%{transform:rotate(0)}40%{transform:rotate(-1.4deg)}70%{transform:rotate(.9deg)}100%{transform:rotate(0)}}
@keyframes swayC{0%{transform:rotate(0)}35%{transform:rotate(.7deg)}65%{transform:rotate(-1.1deg)}100%{transform:rotate(0)}}

/* ================= WELCOME ================= */
#welcome{position:fixed;inset:0;z-index:9999;display:flex;align-items:center;justify-content:center}
#welcome::before{content:"";position:absolute;inset:0;background:url('Logo.png') center/cover no-repeat}
#welcome::after{content:"";position:absolute;inset:0;background:rgba(0,0,0,.6)}
.welcome-box{position:relative;z-index:2;background:rgba(255,255,255,.92);padding:44px 36px;border-radius:30px;text-align:center;max-width:90%}
.welcome-box h1{margin:0 0 10px}
.welcome-box button{margin-top:22px;padding:14px 34px;border-radius:30px;border:0;background:linear-gradient(135deg,#8e44ad,#c0392b);color:#fff;font-weight:600;cursor:pointer}

/* ================= SITE ================= */
#site{position:relative;z-index:2}
header{position:sticky;top:0;z-index:5;background:rgba(255,255,255,.85);backdrop-filter:blur(14px);padding:14px 22px;display:flex;align-items:center;gap:12px}
header img{width:48px;height:48px;border-radius:14px}

/* ================= CATEGORIES ================= */
.categories{display:flex;justify-content:center;gap:14px;flex-wrap:wrap;padding:26px 22px;position:sticky;top:76px;z-index:4}
.categories button{border:0;padding:10px 22px;border-radius:30px;background:rgba(255,255,255,.75);backdrop-filter:blur(10px);font-weight:500;cursor:pointer;transition:.35s}
.categories button.active,.categories button:hover{background:var(--theme,#2a9d8f);color:#fff}
.categories button{border:0;padding:10px 20px;border-radius:30px;background:rgba(255,255,255,.7);backdrop-filter:blur(10px);font-weight:500;cursor:pointer;transition:.3s}
.categories button.active,.categories button:hover{background:#2a9d8f;color:#fff}

/* ================= GRID ================= */
.grid{padding:30px 22px 60px;display:grid;grid-template-columns:repeat(auto-fill,minmax(180px,1fr));gap:22px}
.card{position:relative;background:rgba(255,255,255,.72);backdrop-filter:blur(14px);border-radius:28px;overflow:hidden;aspect-ratio:1/1;cursor:pointer;transition:transform .35s ease,box-shadow .35s ease}
.card::after{content:"";position:absolute;inset:0;border-radius:28px;background:radial-gradient(120% 120% at 50% 0%,rgba(255,234,210,.55),transparent 60%);opacity:0;transition:opacity .35s ease;pointer-events:none}
.card:hover{transform:translateY(-8px) scale(1.025);box-shadow:0 32px 80px rgba(0,0,0,.18)}
.card:hover::after{opacity:1}
.card img{width:100%;height:100%;object-fit:cover;display:block;transition:transform .6s ease}
.card:hover img{transform:scale(1.06)}
.card.hidden{display:none}

/* ================= MODAL ================= */
#modal{position:fixed;inset:0;display:flex;align-items:center;justify-content:center;background:rgba(0,0,0,.85);opacity:0;pointer-events:none;z-index:100}
#modal.active{opacity:1;pointer-events:auto}
#modal-box{background:#fff;border-radius:26px;padding:22px;text-align:center;max-width:90%}
#modal-box img{max-width:80vw;max-height:60vh;border-radius:18px;display:block}
#waBtn{display:inline-block;margin-top:20px;padding:14px 34px;border-radius:40px;background:#25d366;color:#fff;font-weight:600;text-decoration:none}
</style>
</head>
<body>

<div class="threads">
  <span class="thread t1"></span><span class="thread t2"></span><span class="thread t3"></span><span class="thread t4"></span><span class="thread t5"></span><span class="thread t6"></span>
</div>

<div id="welcome">
  <div class="welcome-box">
    <h1>The Happy Panda Crafts üêº</h1>
    <p>Bringing smiles through handmade crochet</p>
    <button onclick="enterSite()">Enter</button>
  </div>
</div>

<div id="site">
<header><img src="Logo.png"><h2>The Happy Panda Crafts</h2></header>

<div class="categories">
  <button class="active" onclick="filterCat('all')">All</button>
  <button onclick="filterCat('toys')">Toys</button>
  <button onclick="filterCat('keychains')">Keychains</button>
  <button onclick="filterCat('decor')">Home Decor</button>
</div>

<div class="grid">
  <div class="card" data-cat="toys" data-img="images/photo1.jpg"><img src="images/photo1.jpg"></div>
  <div class="card" data-cat="toys" data-img="images/photo2.jpg"><img src="images/photo2.jpg"></div>
  <div class="card" data-cat="keychains" data-img="images/photo3.jpg"><img src="images/photo3.jpg"></div>
  <div class="card" data-cat="decor" data-img="images/photo4.jpg"><img src="images/photo4.jpg"></div>
  <div class="card" data-cat="decor" data-img="images/photo5.jpg"><img src="images/photo5.jpg"></div>
</div>
</div>

<div id="modal">
  <div id="modal-box">
    <img id="modalImg">
    <a id="waBtn" target="_blank">Order on WhatsApp</a>
  </div>
</div>

<script>
function enterSite(){document.getElementById('welcome').remove()}

function filterCat(cat){
  const themes={
    all:{bg:'#faf6f1',theme:'#2a9d8f'},
    toys:{bg:'#fff1f2',theme:'#e76f51'},
    keychains:{bg:'#f1fbf9',theme:'#2a9d8f'},
    decor:{bg:'#fff8e6',theme:'#e9c46a'}
  }
  document.documentElement.style.setProperty('--bg',themes[cat].bg)
  document.documentElement.style.setProperty('--theme',themes[cat].theme)

  document.querySelectorAll('.categories button').forEach(b=>b.classList.remove('active'))
  event.target.classList.add('active')
  document.querySelectorAll('.card').forEach(c=>{
    c.classList.toggle('hidden',cat!=='all' && c.dataset.cat!==cat)
  })
}

const modal=document.getElementById('modal');
const modalImg=document.getElementById('modalImg');
const waBtn=document.getElementById('waBtn');

document.querySelectorAll('.card').forEach(c=>{
  c.onclick=()=>{
    const img=c.dataset.img;
    modalImg.src=img;
    waBtn.href=`https://wa.me/91XXXXXXXXXX?text=Hi!%20I%20am%20interested%20in%20this%20product:%20${location.origin+'/'+img}`;
    modal.classList.add('active');
  }
});

modal.onclick=e=>{if(e.target===modal)modal.classList.remove('active')}
</script>

</body>
</html>

